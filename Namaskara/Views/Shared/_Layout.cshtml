<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Namaskara Superfood</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-2.2.1.js"></script>
    
</head>
<body>
    <div id="wrapper">
        <div id="header" class="container">
            <div id="logo">
                <img src="~/Images/SampleLogo.png" height="150" width="250"/>
            </div>
            <div id="login">
                @Html.Partial("_LoginPartial")
            </div>
            <div id="cart">
                @{Html.RenderAction("CartSummary", "ShoppingCart");}
            </div>
            <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
            <input type="text" id="searchBox" onkeyup="search(this.value)" onfocus="search(this.value)"/>
            <div id="result"></div>
            <div class="clear"></div>
        </div>
        <div id="navigation" class="container">
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About Me", "About", "Home")</li>
                <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>


                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Store Manager", "CategoryIndex", "StoreManager")</li>
                    <li>@Html.ActionLink("Orders", "WCOrder", "StoreManager")</li>

                }
                else
                {
                    <li>@Html.ActionLink("Products", "Index", "Store")</li>
                    
                }

            </ul>
        </div>
        <div id="mainBody" class="container">
            @RenderSection("categories", required: false)
            <div id="body">
                @RenderBody()
            </div>
            <div class="clear" />
        </div>
        <div id="footer"></div>
        
    </div>

    
    
    <script type="text/javascript" src="~/Scripts/mainJS.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
