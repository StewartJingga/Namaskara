@using Namaskara.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Namaskara Superfood</title>
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-180x180.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/android-chrome-192x192.png" sizes="192x192">
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="/mstile-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <link href="~/Content/reset.css" rel="stylesheet" />
    @Styles.Render("~/Content/css2")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
    
    

</head>
<body>
    <div id="wrapper">
        <div id="header">
            <div id="leftHeader">
                <div id="logo">
                    <a href="#">
                        <img src="~/Images/Namaskara Alternatives-01.png" />
                    </a>
                </div>
                <div id="navigation">
                    <nav>
                        <ul>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Products", "ProductIndex", "Store")</li>
                            <li>@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Admin", "Dashboard", "StoreManager")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
            <div id="rightHeader">
                <div>
                    @Html.Partial("_LoginPartial")
                    <div id="cart-reload">
                        @{ Html.RenderAction("CartSummary", "ShoppingCart");}
                    </div>
                    
                </div>
                <div id="searchDiv">
                    <input id="searchBox" type="text" placeholder="Search Box" />
                    <ul id="searchResult"></ul>
                </div>
            </div>
        </div>
        <div class="clear"></div>
        
        <div id="mainBody">
           <div>
               @RenderBody()
           </div>
            
        </div>
        <div id="footer">
            <div>
                <div class="footer-div">
                    <h4>Information</h4>
                    <br />
                    <ul>
                        <li><a href="@Url.Action("ExchangePolicy","Home")">exchange policy</a></li>
                        <li><a href="@Url.Action("FAQ","Home")">delivery information</a></li>
                        <li><a href="@Url.Action("FAQ","Home")">FAQ</a></li>
                        <li><a href="@Url.Action("TermsAndConditions","Home")">terms & conditions</a></li>
                    </ul>

                    <hr />
                </div>
                <div class="footer-div">
                    <h4>My Account</h4>
                    <br />
                    <ul>
                        <li><a href="@Url.Action("Index","Account")">my account</a></li>
                        <li><a href="@Url.Action("OrderHistory","Account")">order history</a></li>
                        <li><a href="@Url.Action("Wishlist","Account")">wish list</a></li>

                    </ul>
                    <hr />
                </div>
                <div class="footer-div">

                    <div>
                        &nbsp;&nbsp;<span class="glyphicon glyphicon-envelope"></span><span>&nbsp; @Config.Email</span>
                    </div>
                    <div>
                        <img src="~/Images/WhatsApp-icon.png" class="logo" /><span>081232225941</span>
                    </div>

                </div>     

            </div>  
        </div>
    </div>
    
    
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/mainJS.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
