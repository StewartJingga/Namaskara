@model IEnumerable<Namaskara.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
   @Html.ActionLink("Category List", "CategoryIndex", "StoreManager") | @Html.ActionLink("Product List", "ProductIndex", "StoreManager")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            
            @Html.ActionLink("Products", "ProductIndex", new { id=item.CategoryId })
            
        </td>
    </tr>
}

</table>
