@model IEnumerable<Namaskara.Models.PromoCode>

@{
    ViewBag.Title = "PromoIndex";
}

<h2>PromoIndex</h2>

<p>
    @Html.ActionLink("Create New", "CreatePromo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeletePromo", new { id=item.Id })
        </td>
    </tr>
}

</table>
