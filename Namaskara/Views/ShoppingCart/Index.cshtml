@model Namaskara.ViewModels.ShoppingCartViewModel
@using Namaskara.Models

@{
    ViewBag.Title = "Shopping Cart";
}



<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<h2>Shopping Cart</h2>
@if (Model.CartTotal != 0)
{
    <p class="button">
        @Html.ActionLink("Checkout >> ", "AddressAndPayment", "Checkout")
    </p>
    <div id="update-message">
    </div>
    <table>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Price (each)
            </th>
            <th>
                Quantity
            </th>
            <th>Total</th>
            <th></th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr id="row-@item.RecordId">
                <td>
                    @Html.ActionLink(item.Item.DisplayName, "Details", "Store", new { id = item.Item.ProductId }, null)
                </td>
                <td id="itemPrice-@item.RecordId" data-id="@item.Item.RetailPrice">
                    @if (item.Item.Product.IsOnSale)
                    {

                        <span style="color:red">@String.Format("{0:n}", item.Item.RetailPrice)</span>
                        <span>--></span>
                        <span style="color:green">@String.Format("{0:n}", Utilities.FindReducedPrice(item.Item.RetailPrice, item.Item.Product.DiscountPercentage))</span>

                    }
                    else
                    {
                        @String.Format("{0:n}", item.Item.RetailPrice)
                    }
                </td>
                <td id="item-count-@item.RecordId">
                    @item.Count
                </td>
                <td id="total-price-@item.RecordId">
                    @if (item.Item.Product.IsOnSale)
                    {
                        @Html.Raw(String.Format("Rp {0:n}", Utilities.FindReducedPrice(item.Item.RetailPrice, item.Item.Product.DiscountPercentage) * item.Count));
                    }
                    else
                    {
                        @Html.Raw(String.Format("Rp {0:n}", @item.Item.RetailPrice * @item.Count));
                    }

                </td>
                <td>
                    <a href="#" class="RemoveLink" data-id="@item.RecordId">
                        Remove from cart
                    </a>
                </td>
            </tr>
        }
        <tr>
            <td>
                Total
            </td>
            <td></td>
            <td></td>
            <td id="cart-total">
                @String.Format("Rp {0:n}", @Model.CartTotal)
            </td>
        </tr>
    </table>
}
else
{
    <h1>Your cart is Empty.</h1>
}


@section scripts{
<script type="text/javascript">
    $(document).ready(function (e) {

        $(".RemoveLink").click(function () {

            var recordToDelete = $(this).attr("data-id");
            var itemPrice = $("#itemPrice-"+recordToDelete).attr("data-id");

            if (recordToDelete != "") {

                $.post('@Url.Action("RemoveFromCart", "ShoppingCart")', { id: recordToDelete },
                    function (data) {
                        if (data.ItemCount == 0) {
                            $("#row-" + data.DeleteId).fadeOut("slow");
                        } else {
                            $("#item-count-" + data.DeleteId).text(data.ItemCount);
                            $("#total-price-" + data.DeleteId).text(parseFloat(Math.round(data.ItemCount * itemPrice)).toFixed(2));

                        }
                        $("#cart-total").text(data.CartTotal);
                        $("#update-message").text(data.Message);
                        $("#cart-status").text("Cart (" + data.CartCount + ")");

                    }, "json");
            }
        });

        


    });




</script>

    }
